<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dmitriy.tarasov.android.intents.demo"
    android:versionCode="1"
    android:versionName="0.0.1">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CALL_PHONE"/>

    <uses-sdk
        android:minSdkVersion="4"
        android:targetSdkVersion="17"/>

    <application
        android:label="@string/app_name"
        android:theme="@style/DemoApp.Theme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".CapturePhotoActivity"/>

        <activity android:name=".CropImageActivity"/>

        <activity android:name=".CallPhoneActivity"/>

        <activity android:name=".DialPhoneActivity"/>

        <activity android:name=".OpenLinkActivity"/>

    </application>
</manifest> 
