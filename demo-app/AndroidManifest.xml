<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dmitriy.tarasov.android.intents.demo"
    android:versionCode="100"
    android:versionName="1.0.0">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <uses-sdk
        android:minSdkVersion="4"
        android:targetSdkVersion="18"/>

    <application
        android:label="@string/app_name"
        android:icon="@drawable/ic_launcher"
        android:theme="@style/DemoApp.Theme"
        android:allowBackup="true">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".CapturePhotoActivity"/>

        <activity android:name=".CropImageActivity"/>

        <activity android:name=".CallPhoneActivity"/>

        <activity android:name=".DialPhoneActivity"/>

        <activity android:name=".open.OpenLinkActivity"/>

        <activity android:name=".open.OpenAudioActivity"/>

        <activity android:name=".open.OpenVideoActivity"/>

        <activity android:name=".open.OpenImageActivity"/>

        <activity android:name=".open.OpenTextActivity"/>

        <activity android:name=".pick.PickFileActivity"/>

        <activity android:name=".pick.PickContactActivity"/>

        <activity android:name=".show.ShowLocationActivity"/>

        <activity android:name=".show.ShowLocationServicesActivity"/>

        <activity android:name=".show.ShowStreetViewActivity"/>

        <activity android:name=".FindLocationActivity"/>

        <activity android:name=".SendSmsActivity"/>

        <activity android:name=".ShareTextActivity"/>

        <activity android:name=".SendEmailActivity"/>

        <activity android:name=".open.OpenPlayStoreActivity"/>

    </application>
</manifest> 
